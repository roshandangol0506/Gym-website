        .navbar {
            display: flex;
            justify-content: space-around;
            background-color: transparent;
            color: white;
            padding: 1rem;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 10;
            transition: background-color 0.7s ease, color 0.3s ease, transform 0.7s ease;
            transform: translateY(0);
        }

        .navbar.scrolled {
            background-color: #020379;
            color: white;
            transform: translateY(0);
        }

        .nav-logo {
            height: 100px;
            /* Adjust as needed */
        }

        .nav-list {
            display: flex;
            justify-content: center;
            list-style-type: none;
            padding: 0;
            margin-top: 0;
        }

        .nav-list li {
            position: relative;
            margin-right: 40px;
        }

        .nav-list a {
            text-decoration: none;
            color: inherit;
            padding: 1rem;
            transition: color 0.7s ease;
            display: flex;
            align-items: center;
        }

        .nav-list a i {
            margin-right: 0;
            /* Initially, no margin for icon */
            transition: margin-right 0.5s ease;
        }

        .nav-list a span {
            opacity: 0;
            width: 0;
            overflow: hidden;
            white-space: nowrap;
            transition: width 2s ease, opacity 2s ease;
        }

        .nav-list a:hover i {
            margin-right: 10px;
            /* Add margin to make space for the text */
        }

        .nav-list a:hover span {
            width: auto;
            opacity: 1;
            padding-left: 5px;
        }

        .nav-list a::after {
            content: "";
            position: absolute;
            width: 0;
            height: 2px;
            background-color: white;
            bottom: 20px;
            left: 50%;
            transition: width 0.3s ease, left 0.3s ease;
        }

        .nav-list a:hover::after {
            width: 100%;
            left: 0;
        }

        .nav-join {
            padding: 0.5rem 1rem;
